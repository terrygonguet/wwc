{
  "applications": {
    "gecko": {
      "id": "addon@webwidecomments.com",
      "strict_min_version": "42.0"
    }
  },

  "author": "Terry Gonguet",

  "background": {
    "scripts": ["background.js"]
  },

  "browser_action": {
    "browser_style": true,
    "default_icon": "resources/icon.svg",
    "default_title": "Toggle Comments"
  },

  "commands": {
    "toggle-display": {
      "suggested_key": {
        "default": "Ctrl+Shift+Y"
      },
      "description": "Toggles display of comments"
    },
    "place-comment": {
      "suggested_key": {
        "default": "Ctrl+Shift+U"
      },
      "description": "Post a new comment"
    }
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jQuery/jquery.js", "jQuery/jquery-ui.min.js", "moment.js", "comments.js"],
      "css": ["jQuery/jquery-ui.min.css", "comments.css"]
    }
  ],

  "description": "Now you can shitpost everywhere.",

  "developer": {
    "name": "Terry Gonguet",
    "url": "http://terry.gonguet.com/CV"
  },

  "icons": {
    "48": "resources/icon.svg",
    "96": "resources/icon.svg"
  },

  "manifest_version": 2,

  "name": "Web Wide Comments",

  "permissions": ["https://webwidecomments.herokuapp.com/", "tabs", "contextMenus", "storage"],

  "version": "0.1"
}
